<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatch.Vertical">

    <com.ruiyi.askandanswer.widgets.HeaderBar
        android:id="@+id/mHeaderBar"
        style="@style/MatchWrap"
        android:layout_height="@dimen/common_header_bar_height"
        app:titleText="修改密码" />

    <EditText
        android:id="@+id/mOldEt"
        style="@style/MatchWrap"
        android:padding="@dimen/common_margin"
        android:background="@color/common_white"
        android:layout_marginTop="@dimen/common_margin_big"
        android:text=""
        android:inputType="text"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:hint="原密码"
        android:textColor="@color/text_normal"
        android:textSize="@dimen/text_middle_size" />

    <EditText
        android:id="@+id/mNewEt"
        style="@style/MatchWrap"
        android:padding="@dimen/common_margin"
        android:background="@color/common_white"
        android:layout_marginTop="@dimen/common_margin_middle"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:text=""
        android:inputType="text"
        android:hint="新密码"
        android:textColor="@color/text_normal"
        android:textSize="@dimen/text_middle_size" />

    <EditText
        android:id="@+id/mConfirmEt"
        style="@style/MatchWrap"
        android:padding="@dimen/common_margin"
        android:background="@color/common_white"
        android:layout_marginTop="@dimen/common_margin_middle"
        android:text=""
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:inputType="text"
        android:hint="确认密码"
        android:layout_marginBottom="@dimen/common_margin_large"
        android:textColor="@color/text_normal"
        android:textSize="@dimen/text_middle_size" />

    <Button
        android:id="@+id/mExitBtn"
        style="@style/FullBtnStyle"
        android:text="确认修改" />
</LinearLayout>