<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_header_bar_height"
    android:background="@color/common_blue"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/MatchMatch"
        android:layout_marginTop="@dimen/common_margin_big">

        <ImageView
            android:id="@+id/mLeftIv"
            style="@style/WrapMatch"
            android:paddingLeft="@dimen/common_padding"
            android:paddingRight="@dimen/common_padding"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/mTitleTv"
            android:layout_width="@dimen/common_size200"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_centerInParent="true"
            android:textColor="@color/common_white"
            android:textSize="@dimen/text_large_size" />

        <LinearLayout
            style="@style/WrapWrap.Horizontal"
            android:paddingLeft="@dimen/common_padding"
            android:paddingRight="@dimen/common_padding"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/mRightTv"
                style="@style/WrapWrap"
                android:textColor="@color/common_white"
                android:textSize="@dimen/text_big_size" />

            <ImageView
                android:id="@+id/mRightIv"
                style="@style/WrapMatch"
                android:gravity="center"
                android:src="@drawable/ic_search"
                android:visibility="gone"  />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>