<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatch.Vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size200"
        android:background="@color/common_blue"
        android:padding="@dimen/common_padding_middle">

        <ImageView
            android:id="@+id/mSettingIv"
            android:layout_width="@dimen/common_icon_small_width"
            android:layout_height="@dimen/common_icon_middle_height"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/common_margin_large_less"
            android:layout_marginRight="@dimen/common_margin_middle"
            android:src="@drawable/ic_setting" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mAvatarCiv"
            android:layout_width="@dimen/common_icon_width_big"
            android:layout_height="@dimen/common_icon_height_big"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/common_blue"
            app:civ_border_width="@dimen/common_divider_width" />

        <TextView
            android:id="@+id/mInfoTv"
            style="@style/WrapWrap"
            android:layout_below="@id/mAvatarCiv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/common_margin_middle"
            android:text="韩丽 青岛二中 高二"
            android:textColor="@color/common_white"
            android:textSize="@dimen/text_middle_size" />

        <TextView
            android:id="@+id/mPInfoTv"
            style="@style/WrapWrap"
            android:layout_below="@id/mInfoTv"
            android:layout_centerHorizontal="true"
            android:text="家长 韩力"
            android:textColor="@color/common_white"
            android:visibility="gone"
            android:textSize="@dimen/text_middle_size" />
    </RelativeLayout>


    <com.ruiyi.askandanswer.widgets.CategoryItemLayout
        android:id="@+id/mFootLl"
       style="@style/MatchWrap"
        android:layout_marginTop="@dimen/common_margin_big"
        android:background="@color/text_normal"
        app:img_left_src="@drawable/ic_foot"
        app:img_right_src="@drawable/ic_next"
        app:txt="我的足迹" />

    <com.ruiyi.askandanswer.widgets.CategoryItemLayout
        android:id="@+id/mAskLl"
        style="@style/MatchWrap"
        app:img_left_src="@drawable/ic_ask"
        app:img_right_src="@drawable/ic_next"
        app:txt="我的提问" />

    <com.ruiyi.askandanswer.widgets.CategoryItemLayout
        android:id="@+id/mAttentionLl"
        style="@style/MatchWrap"
        app:img_left_src="@drawable/ic_myattention"
        app:img_right_src="@drawable/ic_next"
        app:txt="我的关注" />

    <com.ruiyi.askandanswer.widgets.CategoryItemLayout
        android:id="@+id/mMoneyLl"
        style="@style/MatchWrap"
        app:img_left_src="@drawable/ic_money"
        app:img_right_src="@drawable/ic_next"
        app:txt="我的金币" />

    <com.ruiyi.askandanswer.widgets.CategoryItemLayout
        android:id="@+id/mGetLl"
        style="@style/MatchWrap"
        android:layout_marginTop="@dimen/common_margin_big"
        app:img_left_src="@drawable/ic_get"
        app:img_right_src="@drawable/ic_next"
        app:txt="我的收藏" />
</LinearLayout>