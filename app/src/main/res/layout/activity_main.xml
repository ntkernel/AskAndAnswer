<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.activity.MainActivity">

    <RelativeLayout
        style="@style/MatchMatch">

        <com.ashokvarma.bottomnavigation.BottomNavigationBar
            android:id="@+id/mBottomBar"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/ma_iv_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/common_margin_big"
            android:elevation="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_ask_unselect" />

        <LinearLayout
            android:id="@+id/tb"
            style="@style/MatchMatch.Vertical"
            android:layout_above="@id/mBottomBar">

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>